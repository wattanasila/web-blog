<%- include("partials/header") %>

<h1>Home</h1>
<% if (locals.posts) { %>

<p><%= startingContent %></p>

<% posts.forEach((post) => { %>

    <h1><%=post.title%></h1>
    <small>
        <%=post.date %>
    </small>
    <p>
    <%=post.content.substring(0, 100) + "..."%>
    <a href="/posts/<%=post.title%>">Read More</a>
    </p>
    
   <% }); %>

    <% } %>

<%- include("partials/footer") %>

